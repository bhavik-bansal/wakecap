    <!-- Base application theme. -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/project_toolbar_color</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@color/colorAccent</item>
        <item name="colorPrimary">@color/project_toolbar_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="editTextStyle">@android:style/Widget.Holo.EditText</item>
    </style>
