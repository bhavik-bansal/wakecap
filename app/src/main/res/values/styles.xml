    <style name="SmallGrayTextTheme" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_90</item>
    </style>

    <style name="DefaultTextTheme" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DefaultTextBoldItalicTheme" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">italic|bold</item>
        <item name="fontPath">@string/font_path_bold_italic</item>
    </style>

    <style name="UserNameTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="fontPath">@string/font_path_semibold</item>
        <item name="android:textColor">@color/black_80</item>
    </style>

    <style name="ToolbarTitleTheme" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomTextAppearanceBold" parent="android:TextAppearance">
        <item name="fontPath">@string/font_path_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CustomTextAppearanceRegular" parent="android:TextAppearance">
        <item name="fontPath">@string/font_path</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="CustomCheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/gray_90</item>

    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_accent</item>
    </style>

    <style name="CustomWhiteProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CustomTabAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:textColor">@color/gray_80</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">@string/font_path_bold_italic</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/black_80</item>
        <item name="tabTextAppearance">@style/CustomTabAppearance</item>
        <item name="tabIndicatorColor">@color/color_accent</item>
    </style>

    <style name="TitleTextTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="SmallTitleTheme" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">@string/font_path_semibold</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SmallerTitleTheme" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">@string/font_path_bold</item>
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SmallestTitleTheme" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">@string/font_path_bold</item>
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SearchBarStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_60</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center_vertical|left|end</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SendMessageStyle">
        <item name="android:textColor">@color/black_80</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center_vertical|left|end</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--activity_login-->

    <style name="lLLines">
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
    </style>


    <style name="DividerStyle">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">5dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="TextInputLayoutStyle" parent="@android:style/TextAppearance">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TextInputLayoutErrorStyle" parent="TextAppearance.AppCompat.Small">
        <!--<item name="android:textStyle">bold|italic</item>-->
        <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="StyledTilEditTextLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>
